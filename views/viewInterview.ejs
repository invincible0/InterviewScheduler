<%- include('./partials/header') %>

<main class="container mt-3">
    <%if(flash.success && flash.success.length){%>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= flash.success %> 
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
        </div>
    <%}%>
    <%if(flash.error && flash.error.length){%>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= flash.error %> 
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
        </div>
    <%}%>
    </main>

<div class="container">
    <div class="mt-3">
        Interview Name: <%=`${interview.name}`%>
    </div>
    <div class="mt-3">
        Date: <%=`${interview.startTime.toDateString()}`%>
    </div>
    <div class="mt-3">
        Start Time: <%=`${interview.startTime.getHours()}:${interview.startTime.getMinutes()}`%>
    </div>
    <div class="mt-3 mb-3">
        End Time: <%=`${interview.endTime.getHours()}:${interview.endTime.getMinutes()}`%>
    </div>
    List of Candidates:
    
    <%for(let i=0;i<interview.candidates.length;i++){ %>
        <div ><%=`${interview.candidates[i].fullname} (${interview.candidates[i].email})`%></div>
    <%}%>
    <div class="mt-3">
        <a href="<%=`/interview/edit/${interview._id}`%>" class="btn btn-warning" role="button" aria-pressed="true">Edit</a>
    </div>
</div>

<%- include('./partials/footer') %>